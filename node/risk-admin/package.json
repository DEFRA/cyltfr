{
  "name": "risk-admin",
  "version": "1.0.0",
  "description": "LTFRI Admin Web App",
  "main": "index.js",
  "scripts": {
    "build:css": "bin/build-css",
    "build": "bin/build",
    "lint": "standard",
    "unit-test": "lab -c -r console -o stdout -r lcov -o lcov.info",
    "test": "npm run lint",
    "postinstall": "npm run build",
    "build:container": "docker build . -t ltfmgmt:v1",
    "package:container": "docker save --output ltfmgmt.tar ltfmgmt:v1",
    "start:container": "docker run -v ~/.aws/:/root/.aws:ro -p 3000:3000 --rm --env-file .env --name ltfmgmt ltfmgmt:v1"
  },
  "author": "defra.gov.uk",
  "license": "ISC",
  "dependencies": {
    "@hapi/bell": "12.0.0",
    "@hapi/boom": "9.0.0",
    "@hapi/cookie": "11.0.0",
    "@hapi/hapi": "19.0.5",
    "@hapi/inert": "6.0.1",
    "@hapi/joi": "17.1.0",
    "@hapi/vision": "6.0.0",
    "@hapi/wreck": "17.0.0",
    "aws-sdk": "2.608.0",
    "blipp": "4.0.1",
    "govuk-frontend": "3.5.0",
    "https-proxy-agent": "4.0.0",
    "moment-timezone": "0.5.27",
    "node-sass": "4.13.1",
    "node-schedule": "^1.3.2",
    "nunjucks": "3.2.0",
    "ogr2ogr": "^1.5.0",
    "sinon": "8.1.1"
  },
  "devDependencies": {
    "@hapi/code": "8.0.1",
    "@hapi/lab": "22.0.3",
    "codeclimate-test-reporter": "0.5.1",
    "standard": "14.3.1"
  },
  "standard": {
    "ignore": [
      "server/public/build/js",
      "server/public/static/js/vendor"
    ]
  }
}
