{
  "name": "risk-app",
  "version": "4.3.0",
  "description": "Long term flood risk information",
  "main": "index.js",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "prepare": "cd ../.. && husky node/risk-app/.husky",
    "start": "pm2 start config/pm2.json",
    "build:webpack": "webpack",
    "build:js": "bin/build-js",
    "build:css": "bin/build-css",
    "watch": "bin/watch",
    "build": "bin/build",
    "test": "npm run test:lint && npm run test:jest",
    "test:jest": "jest --no-cache  --detectOpenHandles --runInBand --forceExit",
    "test:lint": "standard",
    "test:watch": "npm run test -- --watch",
    "debug": "node --inspect-brk=0.0.0.0:9229 index.js",
    "pre-commit": "npm run test && lint-staged",
    "dev": "nodemon -L index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@airbrake/node": "^2.1.8",
    "@hapi/boom": "^10.0.0",
    "@hapi/catbox-memory": "^6.0.1",
    "@hapi/catbox-redis": "7.0.2",
    "@hapi/h2o2": "^10.0.0",
    "@hapi/hapi": "^21.0.0",
    "@hapi/inert": "^7.0.0",
    "@hapi/vision": "^7.0.0",
    "@hapi/wreck": "^18.0.0",
    "@hapi/yar": "^11.0.0",
    "blipp": "4.0.2",
    "friendly-challenge": "^0.9.12",
    "govuk-frontend": "^5.2.0",
    "hapi-pino": "^12.0.0",
    "hapi-rate-limit": "^7.0.0",
    "https-proxy-agent": "^7.0.0",
    "joi": "^17.0.0",
    "nunjucks": "^3.2.0",
    "ol": "^9.0.0",
    "proj4": "^2.10.0"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "sass": "^1.71.1",
    "standard": "^17.0.0",
    "webpack": "^5.90.3",
    "nodemon": "^3.1.0",
    "webpack-cli": "^5.1.4"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "server/public/build/js",
      "server/public/static/js/vendor"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "standard --fix"
  },
  "jest": {
    "automock": false,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/public/**/*",
      "!server/src/js/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "test/output"
  }
}
