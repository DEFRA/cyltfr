{
  "name": "risk-app",
  "version": "3.7.0",
  "description": "Long term flood risk information",
  "main": "index.js",
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "prepare": "cd ../.. && husky install node/risk-app/.husky",
    "start": "pm2 start config/pm2.json",
    "build:js": "bin/build-js",
    "build:css": "bin/build-css",
    "watch": "bin/watch",
    "build": "bin/build",
    "lint": "standard",
    "unit-test": "bin/unit-test",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit && npm run test:lab",
    "test:watch": "npm run test -- --watch",
    "test:lab": "npm run lint && npm run unit-test",
    "debug": "node --inspect-brk=0.0.0.0:9229 index.js",
    "pre-commit": "npm run test && lint-staged"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@airbrake/node": "^2.1.8",
    "@hapi/boom": "^10.0.0",
    "@hapi/catbox-memory": "^6.0.1",
    "@hapi/catbox-redis": "7.0.2",
    "@hapi/cookie": "^12.0.1",
    "@hapi/h2o2": "^10.0.0",
    "@hapi/hapi": "^21.0.0",
    "@hapi/inert": "^7.0.0",
    "@hapi/vision": "^7.0.0",
    "@hapi/wreck": "^18.0.0",
    "@hapi/yar": "^11.0.0",
    "blipp": "4.0.2",
    "friendly-challenge": "^0.9.12",
    "govuk-frontend": "^5.3.0",
    "hapi-pino": "^12.0.0",
    "hapi-rate-limit": "^7.0.0",
    "https-proxy-agent": "^7.0.0",
    "joi": "^17.6.4",
    "nunjucks": "^3.2.0",
    "randomstring": "^1.3.0",
    "redis": "^4.6.13",
    "sinon": "^16.1.0"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.1",
    "@hapi/lab": "^25.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "node-sass": "^9.0.0",
    "proxyquire": "^2.1.3",
    "standard": "^17.0.0"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "server/public/build/js",
      "server/public/static/js/vendor"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "standard --fix"
  }
}
