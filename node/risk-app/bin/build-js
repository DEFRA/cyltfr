#!/bin/bash

# Builds javascript bundles with browserify
#
# Usage
# npm run build:js -- core
# npm run build:js -- search
# npm run build:js -- map

case "$1" in

'core')
  echo "Building core.js"
  ./bin/build-js-core
  ;;
'search')
  echo "Building search.js"
  ./bin/build-js-search
  ;;
'map')
  echo "Building map.js"
  ./bin/build-js-map
  ;;
*)
  echo "Building all"
  ./bin/build-js-core &&
  ./bin/build-js-search &&
  ./bin/build-js-map
  ;;

esac
