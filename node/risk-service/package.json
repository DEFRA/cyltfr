{
  "name": "risk-service",
  "version": "4.3.0",
  "description": "Flood Service",
  "main": "index.js",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "start": "pm2 start config/pm2.json",
    "test": "npm run test:lint && npm run test:jest && npm run test:integration",
    "test:jest": "jest --no-cache  --detectOpenHandles --runInBand --forceExit  --collectCoverage server/",
    "test:integration": "jest --no-cache  --detectOpenHandles --runInBand --forceExit test/integration/",
    "test:lint": "standard",
    "debug": "node --inspect-brk=0.0.0.0:9229 index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.9",
    "hapi-pino": "12.1.0",
    "joi": "^17.13.1",
    "pg": "^8.11.1"
  },
  "devDependencies": {
    "blipp": "4.0.2",
    "jest": "^29.7.0",
    "standard": "17.1.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "automock": false,
    "collectCoverageFrom": [
      "server/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "test/output",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__test_data__/"
    ]
  }
}
